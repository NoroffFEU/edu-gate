{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "array-bracket-spacing": ["error", "always"],
        "curly": ["error", "multi-line"],
        "eqeqeq": ["error", "always"],
        "linebreak-style": ["error", "unix"],
        "indent": ["error", 2],
        "jsx-quotes": ["error", "prefer-double"],
        "init-declarations": ["error", "always"],
        "max-len": ["error", { "code": 80 }],
        "no-label-var": "error",
        "no-undef": "error",
        "object-curly-spacing": ["error", "always"],
        "quotes": ["error", "double"],
        "semi": ["error", "always"]
    }
}